@model AplikacijaDijeljenihRadnihMjesta.Models.ViewModel.GradVM
@{
    ViewData["index"] = "ADMIN";
}

<partial name="Upozorenja" view-data="ViewData" />

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3"></h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Naziv"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Naziv" class="form-control" required="required" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Oznaka"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Oznaka" class="form-control" required="required" />
                        <span asp-validation-for="Oznaka" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w=100" value=" Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> Back </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function InvalidMsg(textbox) {

            if (textbox.value === '') {
                textbox.setCustomValidity
                    ('Unos modela je obavezan!');
            }
            return true;
        }
    </script>
}
