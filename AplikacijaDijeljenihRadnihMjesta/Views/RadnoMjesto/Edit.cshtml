@model AplikacijaDijeljenihRadnihMjesta.Models.ViewModel.RadnoMjestoVM

<partial name="Upozorenja" view-data="ViewData" />
@{


    ViewData["index"] = "ADMIN";
    var lokacijaID = 0;
    if (TempData["LokacijaID"] != null)
    {
        lokacijaID =(int)@TempData["LokacijaID"];

    }
    else
        lokacijaID = 0;
    var orgJedID = 0;
    if (TempData["OrgJedID"] != null)
    {
        orgJedID = (int)(TempData["OrgJedID"]);
    }
    else
        orgJedID = 0;

}
<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3"> Uredi informacije o radnom mjestu</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Lokacija">Odaberilokaciju:</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Lokacija" asp-items="@Model.Lokacije" required>
                            <option hidden selected="selected" value="@Model.Lokacija">@Model.Lokacija</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <label asp-for="Kat"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Kat" class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Prostorija"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Prostorija" class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="BrojRadnogMjesta">Broj radnog mjesta</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BrojRadnogMjesta" class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="TipLaptopa">Model laptopa</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="TipLaptopa" asp-items="@Model.tipoviLaptopa " required>
                            <option hidden selected="selected" value="@Model.TipLaptopa">@Model.TipLaptopa</option>
                        </select>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w=100" value=" Uredi" />
                        </div>
                        <div class="col">
                            @if (lokacijaID!=0)
                            {
                                <a asp-action="Index" asp-route-lokacijaID="@lokacijaID" asp-route-orgJedID="@orgJedID"  class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> </a>
                            }
                            else
                            {
                                <a asp-action="Index"  asp-route-orgJedID="@orgJedID" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
