
@model AplikacijaDijeljenihRadnihMjesta.Models.ViewModel.DjelatnikVM

<link rel="stylesheet" type="text/css" href="~/css/Stranica.css" media="screen" 7 />
<partial name="Upozorenja" view-data="ViewData" />
    @{
        ViewData["index"] = "ADMIN";
        var orgJedID = (TempData["OrgJedID"]);

    }
    
    <form method="post" asp-action="Create">
        <div class="card p-3 mt-5" style="margin-top:30px!important;     margin: 0 auto;   max-width: 850px !important; justify-content:center!important;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["OrgJedID"] != null)
            {
                <div  style="width:min-content; justify-content:right">
                    <a asp-action="Index" asp-route-orgJedID="@orgJedID" style="justify-content:right; text-align:right; width:min-content; font-size:19px; "><i class="fas fa-arrow-left"style="justify-content:right; text-align:right; width:min-content; font-size:26px; "></i></a>

                </div>
            }
            else
            {
                <div style="width:min-content; justify-content:right">
                    <a asp-action="Index" asp-route-orgJedID="@Model.OrganizacijskaJedinica" style="justify-content:right; text-align:right; width:min-content; font-size:19px; "><i class="fas fa-arrow-left"></i></a>

                </div>
            }
            <div class="form-group row" style="margin-top:20px;">
                <h2 class="text-info formTitle"> Dodaj novog zaposlenika</h2>
            </div>
            <div class="row">
                <div class="col-10 createRow ">
                    <div class="form-group row" style="margin-left:15px;">

                        <div class="col-4 colLabel">
                            <label asp-for="MBR">MBR</label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="MBR" class="form-control" />
                            <span asp-validation-for="MBR" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="Ime"></label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="Ime" class="form-control" />
                            <span asp-validation-for="Ime" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="Prezime"></label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="Prezime" class="form-control" />
                            <span asp-validation-for="Prezime" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="KorisnickoIme">Korisničko ime</label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="KorisnickoIme" class="form-control" />
                            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="Lozinka"></label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="Lozinka" class="form-control" />
                            <span asp-validation-for="Lozinka" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="MaxBrojDanaFirma"></label>
                        </div>
                        <div class="col-8 colInput">
                            <input asp-for="MaxBrojDanaFirma" class="form-control" />
                            <span asp-validation-for="MaxBrojDanaFirma" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="OrganizacijskaJedinica">Organizacijska jedinica</label>
                        </div>
                        <div class="col-8 colInput">
                            <select class="form-select" asp-for="OrganizacijskaJedinica" asp-items="@Model.OrganizacijskeJedinice" required>
                            </select>
                            <span asp-validation-for="OrganizacijskaJedinica" class="text-danger"></span>

                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="TipLaptopa">Model laptopa</label>
                        </div>
                        <div class="col-8 colInput">
                            <select class="form-select" asp-for="TipLaptopa" asp-items="@Model.ModeliLaptopa" required>
                            </select>
                            <span asp-validation-for="TipLaptopa" class="text-danger"></span>
                        </div>
                        <div class="col-4 colLabel">
                            <label asp-for="Uloga">Uloga</label>
                        </div>
                        <div class="col-8 ">
                            <select class="form-select" asp-for="Uloga" asp-items="@Model.Uloge" required>
                            </select>
                            <span asp-validation-for="Uloga" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
            
                <div  style="justify-content:right;    text-align: right; margin-right:15%">
                    <input type="submit" class="btn btn-success" style="justify-content:center!important; text-align:center!important; width:min-content;" value="Dodaj" />
                </div>
         
        </div>
       

    </form>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
