@model AplikacijaDijeljenihRadnihMjesta.Models.ViewModel.OrgJedinicaVM
@{
    ViewData["index"] = "ADMIN";
}
<partial name="Upozorenja" view-data="ViewData" />

<form method="post" asp-action="Create">

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
           <h2 class="text-info pl-3"> Dodaj novu organizacijsku jedinicu</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Naziv"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Naziv" class="form-control" required />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value=" Dodaj" />
                        </div>
                            <div class="col">
                                <a asp-controller="OrganizacijskaJedinica" asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> </a>
                            </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
