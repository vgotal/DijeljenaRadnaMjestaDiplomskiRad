@model AplikacijaDijeljenihRadnihMjesta.Models.ViewModel.TipLaptopaVM
 <link rel="stylesheet" type="text/css" href="~/css/Create-Edit.css" media="screen" 7 />
<partial name="Upozorenja" view-data="ViewData" />
@{
    ViewData["index"] = "ADMIN";
}

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3"> Izmjeni informacije o laptopu</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w=100" value=" Edit" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-25 float-right"><i class="fas fa-sign-out-alt"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
